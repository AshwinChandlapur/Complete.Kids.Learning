<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/strip"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ashwin.ashwinchandlapur.animalsounds.MainScroller"
    tools:showIn="@layout/activity_main_scroller">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/alphabet"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:id="@+id/alphabets"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:onClick="alphabets" />

        <com.google.android.gms.ads.NativeExpressAdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/alphabets"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            ads:adUnitId="@string/native_ad_id"
            android:layout_above="@+id/animals"
            android:background="@null"
            ads:adSize="FULL_WIDTHx250">
        </com.google.android.gms.ads.NativeExpressAdView>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/animalsounds"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:layout_below="@+id/adView"
            android:id="@+id/animals"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:onClick="animals" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/partsofbody"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:layout_below="@+id/animals"
            android:id="@+id/bodyparts"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:onClick="bodyparts" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/numbers1"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:layout_below="@+id/bodyparts"
            android:id="@+id/numbers"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:onClick="numbers" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/flags"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:id="@+id/flags"
            android:layout_below="@+id/numbers"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:onClick="flags"
            />





