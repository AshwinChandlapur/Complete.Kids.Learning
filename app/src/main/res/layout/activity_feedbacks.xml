<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/finalwall"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ashwinchandlapur.animalsounds.feedbacks">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="PixaBay"
        android:layout_above="@+id/tv"
        android:textSize="40sp"
        android:textColor="#E4F1FE"
        android:id="@+id/tv2"
        android:onClick="pixabay"/>


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:text="FreePik"
       android:textSize="40sp"
       android:textColor="#E4F1FE"
       android:id="@+id/tv"
       android:layout_above="@+id/tv1"
       android:onClick="freepik"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="FlatIcon"
        android:textSize="40sp"
        android:textColor="#E4F1FE"
        android:id="@+id/tv1"
        android:onClick="flaticon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/ourusers"
        android:textColor="#E4F1FE"
        android:textSize="15sp"
        android:id="@+id/support"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:text="\nAll the Revenue generated thorough ads will be solely used for development of E-Learning Applications." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#E4F1FE"
        android:textSize="20sp"
        android:layout_below="@+id/support"
        android:id="@+id/keep"
        android:visibility="invisible"
        android:text="Keep Supporting :)" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Request to Our Users"
        android:textSize="20sp"
        android:id="@+id/ourusers"
        android:visibility="invisible"
        android:layout_below="@+id/tv1"
        android:textColor="#E4F1FE"/>



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textColor="#E4F1FE"
        android:id="@+id/feed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give Us a 5"
        android:textColor="#E4F1FE"
        android:id="@+id/rate"
        android:layout_above="@+id/feed"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
